	<!-- GATE empty pack -->
        <pack name="GATE" parent="ServerPack" required="no">
            <description>
            General Architecture for Text Engineering (GATE)
Required for the Semantic Assistants Server

Download from: http://gate.ac.uk/
            </description>
        </pack>
        
        <!--  Server files -->
        <pack name="Server" id="ServerPack" required="no">
            <description>Server base files needed to run the server</description>
            <fileset dir="../Server" targetdir="$INSTALL_PATH/Server"/>
            <fileset dir="../Resources" targetdir="$INSTALL_PATH/Resources"/>
	    <!-- UNIX scripts -->   
	    <file src="script/RunServer.sh" targetdir="$INSTALL_PATH/script">
	      <os family="unix"/>
	    </file> 
	    <parsable targetfile="$INSTALL_PATH/script/RunServer.sh">
	      <os family="unix"/>
	    </parsable> 
            <executable targetfile="$INSTALL_PATH/script/RunServer.sh" stage="never" failure="abort" keep="true">
	      <os family="unix"/>
	    </executable>		
	    <!-- Windows scripts -->
	    <file src="script/RunServer.bat" targetdir="$INSTALL_PATH\script">
	      <os family="windows"/>
	    </file> 
	    <parsable targetfile="$INSTALL_PATH\script\RunServer.bat">
	      <os family="windows"/>
	    </parsable> 
	    <executable targetfile="$INSTALL_PATH\script\RunServer.bat" stage="never" failure="abort"  keep="true">
	      <os family="windows"/>
	    </executable>		  
	    <depends packname = "GATE"/>
        </pack>			

        <!--  JAX-WS files -->
        <pack name="JAXWS" parent="Core" required="yes">
            <description>
            Java API for XML Web Services (JAX-WS) v.2.1.7

Nees to be downloaded from: http://jax-ws.java.net/2.1.7/
            </description>
        </pack>
     
      	<!-- Parent node for Clients -->
        <pack name="Clients" required="no">
            <description>NLP Clients</description>
        </pack>    
            
        <!-- Command line client files -->
        <pack name="Command Line" parent="Clients" required="no">
            <description>Command Line base Files</description>
            <fileset dir="../Clients/CommandLine" targetdir="$INSTALL_PATH/Clients/CommandLine"/>
        </pack>
        
