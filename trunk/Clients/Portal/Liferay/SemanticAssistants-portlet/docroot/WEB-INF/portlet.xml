<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>SemanticAssistants</portlet-name>
		<display-name>Semantic Assistants</display-name>
		<portlet-class>com.semanticassistants.client.portal.liferay.SemanticAssistantsPortlet</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/jsp/view.jsp</value>
		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Semantic Assistants</title>
			<short-title>Semantic Assistants</short-title>
			<keywords>Semantic Assistants</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
		 <supported-public-render-parameter>sa_text</supported-public-render-parameter>	
		  <supported-public-render-parameter>sa_result</supported-public-render-parameter>	
		  <supported-public-render-parameter>sa_result_type</supported-public-render-parameter>
	</portlet>         
        <public-render-parameter>
            <identifier>sa_text</identifier>
            <qname xmlns:x="http://abc.com/semantic_assistants_text">x:param1</qname>
        </public-render-parameter>
         <public-render-parameter>
            <identifier>sa_result</identifier>
            <qname xmlns:x="http://abc.com/semantic_assistants_result">x:param1</qname>
        </public-render-parameter>
        <public-render-parameter>
            <identifier>sa_result_type</identifier>
            <qname xmlns:x="http://abc.com/semantic_assistants_result_type">x:param1</qname>
        </public-render-parameter>
</portlet-app>