    <!-- Default Semantic Assistants server to connect to -->
    <property name="csal.server.name"         value="assistant.cs.concordia.ca"/>
    <property name="csal.server.port"         value="8879"/>

    <!-- Port for which the Server listens for debugers to be attached -->
    <property name="server.port.debug"        value="8885"/>
    
    <!-- Port used by the Server to communicate with the clients through wsdl-->
    <property name="server.port.wsdl"         value="8879"/>
    
    <!-- Ant runtime parameters used to suppress warnings in 1.8 -->
    <property name="antruntime"		      value="false"/>

    <!-- Compile parameters for javac. Set "-Xlint:none" to suppress warnings -->
    <property name="compile.args"	      value="-Xlint"/>

    <!-- Development tools.  Not needed for compiling or running the system -->
    <property name="junit.home"               value="${durmtools}/junit" />
    <property name="junit.classpath"          value="${junit.home}/junit.jar" />
    <property name="checkstyle.home"          value="${durmtools}/checkstyle" />
    <property name="checkstyle.config"        value="${checkstyle.home}/durm_checks.xml" />
    <property name="checkstyle.classpath"     value="${checkstyle.home}/checkstyle-5.3-all.jar" />
    <property name="checkstyle.report"        value="checkstyle-result.xml" />
    <property name="pmd.home"                 value="${durmtools}/pmd" />
    <property name="findbugs.home"            value="${durmtools}/findbugs" />
    <property name="findbugs.classpath"       value="${findbugs.home}/lib/findbugs-ant.jar" />
    <property name="pmd.lib"                  value="${pmd.home}/lib" />
    <path id="pmd.classpath">
      <pathelement location="${build}"/>
      <fileset dir="${pmd.lib}">
        <include name="*.jar"/>
      </fileset>
    </path>

    <!-- Libraries shipped with the distribution. You should not need to change this -->
    <property name="lib.home"                 value="${semassist.home}/Lib"/>
    <property name="log4j.jar"                value="${lib.home}/log4j-1.2.14.jar"/>
    <property name="commons-lang.jar"         value="${lib.home}/commons-lang-2.4.jar" />
    <property name="ant.jar" 		      value="${lib.home}/ant.jar"/>
    <property name="protege.home"             value="${lib.home}" />
    <property name="protege-owl.home"         value="${protege.home}" />
    <property name="protege.jar"              value="${protege.home}/protege.jar" />

    <!-- Importing LocalProperties.xml file for local paths and customizations -->
    <import file ="LocalProperties.xml"/>

</project>
