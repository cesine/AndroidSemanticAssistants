<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
  <!--<skipIfNotSupported/>-->
  <programGroup defaultName="Semantic Assistants" location="applications"/>
  <shortcut
    name="Start SA Server"
    target="$INSTALL_PATH/script/RunServer.sh"
    workingDirectory="$INSTALL_PATH/Server"
    description="Run Semantic Assistants NLP Server"
    initialState="normal"
    programGroup="yes"
    desktop="yes"
    type="Application"
    terminal="true"
    startMenu="yes"
    encoding="UTF-8"
    startup="no" >

    <createForPack name="Server"/>
  </shortcut>

   <shortcut
     name="SA Documentation"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="okular"
     workingDirectory=""
     commandLine="$INSTALL_PATH/Doc/semassist.pdf"
     initialState="noShow"
     url="$INSTALL_PATH/Doc/semassist.pdf"
     type="Application"
     encoding="UTF-8"
     description="Semantic Assistants documentation (PDF format)">

     <createForPack name="Documentation"/>
   </shortcut>

  <shortcut
     name="SA Homepage"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="firefox"
     workingDirectory=""
     commandLine=""
     initialState="noShow"
     url="http://www.semanticsoftware.info/semantic-assistants"
     type="Link"
     encoding="UTF-8"
     description="Semantic Assistants Homepage">
   </shortcut>

  <shortcut
    name="Uninstall"
    target="$JDKPath/bin/java"
    commandLine="-jar $INSTALL_PATH/Uninstaller/uninstaller.jar"
    workingDirectory=""
    description="Uninstall Semantic Assistants"
    initialState="normal"
    iconFile="trashcan_full"
    programGroup="yes"
    desktop="no"
    applications="no"
    startMenu="no"
    type="Application"
    encoding="UTF-8"
    startup="no" >
  </shortcut>
</shortcuts>
