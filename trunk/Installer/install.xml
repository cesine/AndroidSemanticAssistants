        <!-- OpenOffice plug-in files -->
        <pack name="OpenOffice Plugin" parent="Clients" required="no">
            <description>OpenOffice Plugin base files</description>
            <fileset dir="../Clients/OpenOffice" targetdir="$INSTALL_PATH/Clients/OpenOffice"/>
        </pack>

		<!-- Eclipse plug-in files -->
        <pack name="Eclipse Plugin" parent="Clients" required="no">
            <description>Eclipse Plugin base files</description>
            <fileset dir="../Clients/EclipsePlugin" targetdir="$INSTALL_PATH/Clients/EclipsePlugin"/> 
        </pack>
         
        <!--  Semantic Assistants Documentation and Installer Documentation -->
    	<pack name="Documentations" required="no">
            <description>The documentation and user manual</description>
			<fileset dir="docs/" targetdir="$INSTALL_PATH/docs"/>
		</pack>		
    </packs>
</installation>
