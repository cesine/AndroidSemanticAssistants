<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center_horizontal" >
	<TextView
			android:id="@+id/service_text_input_instructions_id"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="12sp"
			android:gravity="center"
			android:text="\nText: " />
	<EditText
			android:id="@+id/service_text_input_edit_text_id"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:lines="4"
			android:textSize="12sp" 
			android:text="">
			</EditText>
	<TextView 
		android:layout_height="wrap_content" 
		android:id="@+id/service_parameters_input_instructions_id" 
		android:layout_width="wrap_content" 
		android:textSize="12sp" 
		android:gravity="center" 
		android:text="\nNumber of results desired: "></TextView>
	<EditText 
		android:id="@+id/input_parameters_field_id" 
		android:textSize="12sp" 
		android:digits="0123456789" 
		android:width="100sp" 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent" 
		android:lines="1"
		android:text="5"></EditText>
	<Button 
		android:text="Invoke service" 
		android:layout_height="wrap_content" 
		android:id="@+id/service_parameters_submit_button_id" 
		android:layout_width="fill_parent"></Button>
</LinearLayout>
