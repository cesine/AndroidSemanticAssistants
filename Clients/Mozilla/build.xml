<project name="Mozilla extension" default="dist" basedir=".">

	<target name="init" description="Initializes the script properties">
		<!-- build properties - do not edit -->
		<property name="java.dir"      value="JavaCode"/>
		<property name="plugin.dir"	value="Extension"/>	
	</target>

	<target name="compile" depends="init" description="Compiles the Semantic Assistant tagging service source code">
		<echo message="Compiling the SA Tagging service code..."/>
		<ant dir="${java.dir}"  inheritAll="false" target="compile"/>	
	</target>

	<target name="dist" depends="init" description="Packages the Mozilla plug-in file">
                <echo message="Packaging the SA Tagging service..."/>
                <ant dir="${java.dir}" inheritAll="false" target="dist"/>

		<echo message="Packaging the plug-in file..."/>
		<ant dir="${plugin.dir}" inheritAll="false" target="dist"/>
	</target>

	<target name="clean" depends="init" description="Cleaning the build generated files">
		<ant dir="${java.dir}" inheritAll="false" target="clean"/>
		<ant dir="${plugin.dir}" inheritAll="false" target="clean"/>
	</target>
</project>
