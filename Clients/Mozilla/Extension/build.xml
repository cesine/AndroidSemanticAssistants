<project name="semassist-firefox-plugin" default="dist" basedir="." xmlns="antlib:org.apache.tools.ant">
	<!--taskdef name="jsdoctoolkit" classname="uk.co.darrenhurley.ant.tasks.JsDocToolkit" classpath="jsDoc/jsdoc-toolkit-ant-task/jsdoc-toolkit-ant-task-1.1.2.jar;jsDoc/jsdoc-toolkit/java/classes/js.jar"/-->
	<target name="init" description="Initialize build properties">
		<!-- build properties - do not edit -->
		<property name="src.dir"	value="."/>
		<property name="dist.dir"      value="dist"/>
		<property name="dist.name"      value="SemanticAssistants"/>
	</target>
  
	<target name="dist" depends="init" description="Creates an .xpi file">
		<zip destfile="${dist.dir}/${dist.name}.zip" basedir="${src.dir}" excludes="jsDoc/**, build.xml, dist/**"/>	
		<move file="${dist.dir}/${dist.name}.zip" tofile="${dist.dir}/${dist.name}.xpi"/>	
	</target>
  
  	<target name="clean" depends="init" description="Deletes the generated .xpi file">
		<delete file="${dist.dir}/${dist.name}.xpi" />	
	</target>

	<target name="doc" description="Generates JsDoc from the source files">
		<jsdoctoolkit jsdochome="jsDoc/jsdoc-toolkit/" template="jsdoc" outputdir="doc" inputdir="content" />
	</target>
</project>
